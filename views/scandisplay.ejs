<!DOCTYPE html>
<html>
  <%- include('./utils/header'); -%>
  <body>
    <div class="centered-form">
      <div class="container text-center">
        <h1 class="display-2">Scanned Trash List</h1>
        <div class="my-5">
          <% if(data) { %>
          <form
            method="POST"
            action="/qrcode/create"
            enctype="application/x-www-form-urlencoded"
          >
            <div class="row">
              <% for(let item of data) { %>
              <div class="col-md-4">
                <input
                  type="hidden"
                  name="trash_name"
                  value="<%= item.name %>"
                />
                <input
                  type="hidden"
                  name="est_trash_points"
                  value="<%= item.est_trash_point %>"
                />

                <h1><%= item.name %></h1>
                <p><%= item.est_trash_point %> Points</p>
                <input
                  class="form-control"
                  type="number"
                  id="amount"
                  name="amount"
                  required
                  min="1"
                  max="5"
                  value="1"
                />
              </div>
              <% } %>
            </div>
            <button
              type="submit"
              style="width: 70%"
              class="mt-3 btn btn-primary"
            >
              Create QR
            </button>
          </form>
        </div>
        <% } %>
        <a href="/user/scan">Scan Another Trash?</a> <br />
        <a class="text-danger" href="/user/scan/remove">Remove All Trash</a>
      </div>
    </div>
  </body>
</html>
