<!DOCTYPE html>
<html>
  <%- include('./utils/header'); -%>
  <body>
    <%- include('./utils/navigationUser'); -%>
    <div class="centered-form">
      <div class="container text-center fs-3">
        <h1 class="display-2">Upload Picture to Scan</h1>
        <form
          method="POST"
          action="/user/scan/add"
          enctype="multipart/form-data"
        >
          <div class="form-group my-3">
            <label class="form-label" for="picture"
              ><i class="fa-regular fa-image fs-1"></i
            ></label>
            <input
              name="image"
              type="file"
              accept="image/,.png,.jpg,.jpeg"
              class="form-control"
              id="image"
            />
          </div>
          <button type="submit" style="width: 70%" class="btn btn-primary my-3">
            <h1>Upload</h1>
          </button>
        </form>
        <a href="/user/scan/add"
          ><p class="my-3">Already submit some trashes? Click Here!</p></a
        >
      </div>
    </div>
  </body>
</html>
